<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBasicProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textSize="30sp"
        android:padding="20dp"
        android:text="@string/text_project_level_basic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIntermediateProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00BCD4"
        android:padding="20dp"
        android:text="@string/text_project_level_intermediate"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/btnBasicProject"
        app:layout_constraintStart_toStartOf="@id/btnBasicProject"
        app:layout_constraintTop_toBottomOf="@id/btnBasicProject" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpperIntermediateProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#6DDD72"
        android:padding="20dp"
        android:text="@string/text_project_level_upper_intermediate"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/btnBasicProject"
        app:layout_constraintStart_toStartOf="@id/btnBasicProject"
        app:layout_constraintTop_toBottomOf="@id/btnIntermediateProject" />


</androidx.constraintlayout.widget.ConstraintLayout>