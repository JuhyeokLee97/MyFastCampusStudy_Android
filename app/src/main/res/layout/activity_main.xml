<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibBasicProjects"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASIC"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@id/ibBasicProjects"
        app:layout_constraintEnd_toEndOf="@id/ibBasicProjects"
        app:layout_constraintStart_toStartOf="@id/ibBasicProjects"
        app:layout_constraintTop_toTopOf="@id/ibBasicProjects" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIntermediateProject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00BCD4"
        android:padding="20dp"
        android:text="INTERMEDIATE"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@id/ibBasicProjects"
        app:layout_constraintStart_toStartOf="@id/ibBasicProjects"
        app:layout_constraintTop_toBottomOf="@id/ibBasicProjects" />

</androidx.constraintlayout.widget.ConstraintLayout>